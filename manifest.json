{
	"manifest_version": 2,

	"name": "doroga.ua-copier",
	"description": "Copy geolocation and name from doroga.ua page",
	"version": "1.0",
	
	"permissions": ["clipboardWrite", "activeTab"],
	
	"background": {
        "scripts": ["background.js"]
	},
	"options_page": "options/options.html",

	"browser_action": {
		"default_icon": "images/icon.png",
		"default_title": "Copy location, then title"
	}
}